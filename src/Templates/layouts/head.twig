<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BTS control system - Administrator</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="{{ app.request.basepath }}assets/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    {#<link rel="stylesheet" href="{{ app.request.basepath }}assets/dist/fonts/font-awesome/font-awesome.css">#}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <!-- Ionicons -->
    <link rel="stylesheet" href="{{ app.request.basepath }}assets/dist/fonts/icomoon/icomoon.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="{{ app.request.basepath }}assets/plugins/datatables/dataTables.bootstrap.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ app.request.basepath }}assets/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="{{ app.request.basepath }}assets/dist/css/skins/_all-skins.min.css">

    <link href="{{ app.request.basepath }}assets/dist/img/cart-icon.png" rel="icon">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

    <header class="main-header">
        <!-- Logo -->
        <a href="{{ ('/home') }}" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>P</b>BTS</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg">Control System</span>
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">

                    <!-- Notifications: style can be found in dropdown.less -->

                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="{{ app.request.basepath }}assets/dist/img/avatar5.png" class="user-image" alt="User Image">
                            <span class="hidden-xs">{{ app.session.get('name')['value'] }}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header">
                                <img src="{{ app.request.basepath }}assets/dist/img/avatar5.png" class="img-circle" alt="User Image">
                                <p>
                                    {{ app.session.get('name')['value'] }}
                                    <small>Member since March,2016</small>
                                </p>
                            </li>
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-right">
                                    <a href="{{ ('/logout') }}" class="btn btn-default btn-flat">Sign out</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <!-- Control Sidebar Toggle Button -->
                    {#<li>#}
                    {#<a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>#}
                    {#</li>#}
                </ul>
            </div>
        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="{{ app.request.basepath }}assets/dist/img/avatar5.png" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>{{ app.session.get('name')['value'] }}</p>
                    <a href="#"><i class="fa fa-circle text-success"></i>
                        {% if ((app.session.get('role')['value']) == 0) %}
                            SuperAdmin
                        {% elseif ((app.session.get('role')['value']) == 1) %}
                            Admin
                        {% elseif ((app.session.get('role')['value']) == 2) %}
                            Documentation
                        {% else %}
                            Engineer
                        {% endif %}
                    </a>
                </div>
            </div>
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li class="header">DAFTAR MENU</li>
                <li>
                    <a href="{{ ('/home') }}">
                        <i class="fa fa-dashboard"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                {% if ((app.session.get('role')['value']) < 2) %}
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-shopping-cart"></i> <span>User Management</span> <i class="fa fa-angle-left pull-right"></i>
                        </a>

                        <ul class="treeview-menu">
                            <li><a href="{{ ('/newUser') }}"><i class="fa fa-circle-o"></i> Add User </a></li>
                            {#<li><a href=""><i class="fa fa-circle-o"></i> Lapak Baru</a></li>#}
                            <li><a href="{{ ('/listUser') }}"><i class="fa fa-circle-o"></i>List User</a></li>
                        </ul>
                    </li>
                    {#<li class="treeview">#}
                        {#<a href="#">#}
                            {#<i class="fa fa-tags"></i> <span>Site Management</span> <i class="fa fa-angle-left pull-right"></i>#}
                        {#</a>#}

                        {#<ul class="treeview-menu">#}
                            {#<li><a href="{{ ('/newSite') }}"><i class="fa fa-circle-o"></i> Add Site</a></li>#}
                            {#&#123;&#35;<li><a href=""><i class="fa fa-circle-o"></i> Merk Baru</a></li>&#35;&#125;#}
                            {#<li><a href="{{ ('/listSite') }}"><i class="fa fa-circle-o"></i>List Site</a></li>#}
                        {#</ul>#}
                    {#</li>#}

                {% else %}
                    <li>
                        <a href="{{ ('/siteSelect') }}">

                            <i class="fa fa-check-square"></i>
                            <span>Engineer Form</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        {% block content %}
        {% endblock %}
    </div><!-- /.content-wrapper -->
    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 1.0
        </div>
        <strong>Copyright &copy; 2016-2021<a href="http://komaltechno.com">KOMALTECHNO Inc</a>.</strong> All rights reserved.
    </footer>
    <!-- Add the sidebar's background. This div must be placed
         immediately after the control sidebar -->
    <div class="control-sidebar-bg"></div>
</div><!-- ./wrapper -->

<!-- jQuery 2.1.4 -->
<script src="{{ app.request.basepath }}assets/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<!-- Bootstrap 3.3.5 -->
<script src="{{ app.request.basepath }}assets/bootstrap/js/bootstrap.min.js"></script>
<!-- DataTables -->
<script src="{{ app.request.basepath }}assets/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="{{ app.request.basepath }}assets/plugins/datatables/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="{{ app.request.basepath }}assets/plugins/slimScroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="{{ app.request.basepath }}assets/plugins/fastclick/fastclick.min.js"></script>
<!-- AdminLTE App -->
<script src="{{ app.request.basepath }}assets/dist/js/app.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="{{ app.request.basepath }}assets/dist/js/demo.js"></script>
<!-- page script -->
<script>
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });
</script>
</body>
</html>
